metadata:
  labels:
    app: rollback
  name: rollback-banana
  namespace: giropops
spec:
  replicas: 14
  selector:
    matchLabels:
      app: rollback
  strategy:
    type: Recreate 
  template:
    metadata:
      labels:
        app: rollback
    spec:
      containers:
      - image: nginx:1.17.0
        name: mginx
        resources:
          limits:
            cpu: 0.5
            memory: 256Mi
          requests:
            cpu: 0.3
            memory: 64Mi
